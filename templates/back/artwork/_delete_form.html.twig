<form method="post" action="{{ path('app_back_artwork_delete', {'id': artwork.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artwork.id) }}">
    <button class="btn">Delete</button>
    <button><a href="{{ path('app_back_artwork_index') }}">back to list</a></button>
    {% if app.request.attributes.get('_route') != 'app_back_artwork_edit' %}
        <button> <a href="{{ path('app_back_artwork_edit', {'id': artwork.id}) }}">edit</a> </button>
    {% endif %}
</form>
