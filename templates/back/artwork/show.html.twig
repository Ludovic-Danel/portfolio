{% extends 'base.html.twig' %}

{% block title %}Artwork{% endblock %}

{% block body %}
    <h1>Artwork</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artwork.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ artwork.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artwork.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ artwork.picture }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ artwork.createdAt ? artwork.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DrawingCreatedAt</th>
                <td>{{ artwork.drawingCreatedAt ? artwork.drawingCreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_artwork_index') }}">back to list</a>

    <a href="{{ path('app_back_artwork_edit', {'id': artwork.id}) }}">edit</a>

    {{ include('back/artwork/_delete_form.html.twig') }}
{% endblock %}
