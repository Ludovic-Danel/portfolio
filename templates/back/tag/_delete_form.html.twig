<form method="post" action="{{ path('app_back_tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button class="btn">Delete</button>
    <button class="btn"><a href="{{ path('app_back_tag_index') }}">back to list</a></button>
    {% if app.request.attributes.get('_route') != 'app_back_tag_edit' %}
        <button>     <a href="{{ path('app_back_tag_edit', {'id': tag.id}) }}">edit</a>
        </button>
    {% endif %}

</form>
