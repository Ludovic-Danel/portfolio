<form class="form-button" method="post" action="{{ path('app_back_tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce tag?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button class="btn">Supprimer</button>
    {% if app.request.attributes.get('_route') != 'app_back_tag_edit' %}
         <a class="button" href="{{ path('app_back_tag_edit', {'id': tag.id}) }}">Modifier</a>
        
    {% endif %}
    <a class="button" href="{{ path('app_back_tag_index') }}">Retour à la liste</a>

</form>
