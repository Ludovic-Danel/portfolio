<!DOCTYPE html>
<html >
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}

			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
			<link rel="stylesheet" href="{{ asset('css/portfolio.css') }}">
			<link rel="stylesheet" href="{{ asset('css/carousel.css') }}">
			<link rel="stylesheet" href="{{ asset('css/back.css') }}">


		{% endblock %}

		{% block javascripts %}{% endblock %}

	</head>
	<body>
		<header>
			<div id="CmdMenu" title="Afficher/Masquer le Menu">&#9776;</div>
			<nav id="LeMenu">
				<a href="{{ path('app_front' )}}">Accueil</a>
				<a href="{{ path('app_category' )}}">Catégories</a>
				<a href="{{ path('app_artworks' )}}">Galerie</a>
				<a href="{{ path('app_contact' )}}">Contactez-moi</a>
				<a href="{{ path('app_about' )}}">À Propos de Moi</a>
			</nav>

		</header>
		<h1>
			<a id="logo" href="{{ path('app_front' )}}">
				Marc Broquet <br>Illustration & Concept
			</a>
		</h1>
		
		{% block body %}{% endblock %}
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		<script src="{{ asset('js/pagination.js') }}"></script>
		<script src="{{ asset('js/toggleMenu.js') }}"></script>
		<script src="{{ asset('js/carousel.js') }}"></script>
		<script src="{{ asset('js/popUp.js') }}"></script>
		<script src="{{ asset('js/zoomPicture.js') }}"></script>

	</body>
	<footer>
		<p>Design par Ludovic Danel
			<span class="cadenas">
				<a href="{{path('app_back')}}">&#x1F512;</span>
			</a>
		</p>
	</footer>
</html>
