{% extends 'base.html.twig' %}

    {% block title %}
        {{'Categories' }}
    {% endblock %}
    {% block meta_description %}
    Plongez dans l'univers cr√©atif du digital : science-fiction, culture geek, art visuel. Chaque pixel raconte une histoire.
    {% endblock %}
    
{% block body %}
    <h2>Categories</h2>

    <div class="pastille">
        {% for tag in tags %}
            {% if tag.artworks|length > 0 %}
                {% set lastArtwork = tag.artworks.last() %}
                <a href="{{ path('app_tag', {'id': tag.id}) }}">
                    <div class="pastille-content">
                        <div class="title">{{ tag.name }}</div>
                        <img class="picture" src="data:image/jpeg;base64,{{ lastArtwork.pictureMin }}">
                    </div>
                </a>
            {% endif %}
        {% endfor %}
    </div>    
  
{% endblock %}
