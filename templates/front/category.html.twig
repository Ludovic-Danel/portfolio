{% extends 'base.html.twig' %}

{% block title %}Digital Artist{% endblock %}

{% block body %}
        <div class="pastille">
            {% for tag in tags %}

            <a href="{{ path('app_tag', {'id': tag.id}) }}">
                <div class="pastille-content">
                    <div class="title">{{ tag.name }}</div>
                    {% if tag.artworks|length > 0 %}
                        {% set lastArtwork = tag.artworks.last() %}
                        <img class="image" src="{{ lastArtwork.picture }}">
                    {% else %}
                        <p class="no-artwork">No artwork available for this tag.</p>
                    {% endif %}
                </div>
            </a>
        {% endfor %}

        </div>
    
  
{% endblock %}
