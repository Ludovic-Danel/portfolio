{% extends 'base.html.twig' %}

{% block title %}
	{{ artwork.title }}
	- Artwork Details
{% endblock %}


{% block body %}

    <div class="artwork-container">
        <img class="picture" src="{{ artwork.picture }}" alt="{{ artwork.title }}" id="clickableImage">
        <div class="artwork-content">
            <h2 class="artwork-title">{{ artwork.title }}</h2>
            <p class="artwork-date">créé le {{ artwork.drawingCreatedAt|date('d/m/Y') }}</p>
            <p class="artwork-description">{{ artwork.description }}</p>
            <div class="tags">
                {% for tag in artwork.tag %}
                    <a href="{{ path('app_tag', {'id': tag.id}) }}">
                        <button>{{ tag.name }}</button>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Conteneur pour l'image en plein écran -->
    <div id="fullscreenOverlay" class="overlay">
        <span class="close-btn" id="closeBtn">&times;</span>
        <img class="overlay-content" id="fullscreenImage">
    </div>
    
    
    
    
{% endblock %}
